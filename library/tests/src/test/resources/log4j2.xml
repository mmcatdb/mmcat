<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">%highlight{[%-5p]}{INFO=bright blue, DEBUG=bright magenta} %style{%d{yyyy-MM-dd HH:mm:ss}}{bright,green} %style{%-24c{1}}{magenta} %style{- %m%n}{white}</Property>
    </Properties>

    <Appenders>
        <Console name="console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Turn off all logs (unless its something critical), because they are too verbose (looking at you, spark) ... -->
        <Root level="warn">
            <AppenderRef ref="console"/>
        </Root>

        <!-- ... but allow our logs. -->
        <Logger name="cz.matfyz" level="debug" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
    </Loggers>
</Configuration>